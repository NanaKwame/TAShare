<html>
<div class="inlineb login-all">
  <div id="navbar" style="height:65px;">
    <div id = 'logo'><h1 style = 'margin-top: 10px; margin-left: 10px; font-size: 45px; font-family: BebasNeueBold'>TA-Share</h1></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "login-signin"}) do |f| %>

      <div class="login-signin-email inlineb">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class ="login-signin-forgot inlineb">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      <% end -%>
      </div>

      <div class="login-signin-password inlineb">
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
        <% if devise_mapping.rememberable? -%>
        <div class="login-signin-remember inlineb">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      </div>
      <div class="login-signin-submit inlineb">
        <%= f.submit "Sign in" %>
      </div>
    <% end %>
  </div>

<div class="login-bottom inlineb">
  <div class= "login-about inlineb ">
    <br />
    <br/>
    <h1>TA share is a platform that allows old and new teaching assistants to share resources.</h1>
    <br />
    <ul>
      <li>
        <%= image_tag "checkmark.png", :height => "30px", :width => "30px"%>Share and find resources for different classes.
      </li>
      <li>
        <%= image_tag "checkmark.png", :height => "30px", :width => "30px"%>Like resources to make them more popular.
      </li>
      <li>
        <%= image_tag "checkmark.png", :height => "30px", :width => "30px"%>Bookmark resources to view later.
      </li>
      <li>
        <%= image_tag "checkmark.png", :height => "30px", :width => "30px"%>View some resources on our platform.
      </li>
    </ul>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "login-signup inlineb"}) do |f| %>
    <%= devise_error_messages! %>
    <br />
    <br />
    <br />
    <h1>Sign up</h1>

    <div class="signup-names">
    <%= f.text_field :first_name, autofocus: true, :required => true, :placeholder => "First Name" %>
    <%= f.text_field :last_name, autofocus: true , :required => true, :placeholder => "Last Name"%>
    </div>

    <div class="signup-email">
    <%= f.email_field :email, autofocus: true, :required => true, :placeholder => "Email" %></div>

    <div class="signup-pwd">
      <%= f.password_field :password, autocomplete: "off", :required => true, :placeholder => "Password" %></div>

    <div class="signup-cnpwd">
      <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :placeholder => "Confirm Password" %></div>

    <div class="signup-but"><%= f.submit "Sign up" %></div>
  <% end %>
</div>

</div>
</html>